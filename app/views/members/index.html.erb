<%#= link_to 'Download as .xlsx', members_path(format: :xlsx) %>


<div class="row mt-3"  style="width: 100vw">
  <div class="col-2">
    <div class="d-flex" , style="margin-left: 20px">
      <%= image_tag "icons/Vector.png", style: "height: 34.3px; width: 32px; margin-right: 10px;" %>
      <h3>Maze</h3>
    </div>

    <div style="padding-top: 40px">
      <div style="margin: 30px auto 20px; margin-left: 30px">
        <%= link_to posts_path do %>
          <div class="d-flex " style="height: 15px; padding-left: 20px;">
            <%= image_tag 'icons/feed.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/feed.png' %>
          </div>
        <% end %>
      </div>

      <div style="margin: 30px; padding: 20px">
        <%= link_to edit_user_registration_path do %>
          <div class="d-flex " , style="height: 15px;">
            <%= image_tag 'icons/profile.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/Profile.png' %>
          </div>
        <% end %>
      </div>

      <%= link_to members_path do %>
        <div style="margin: 30px; padding: 20px">
          <div class="d-flex" , style="height: 17px;">
            <%= image_tag 'icons/manage_users.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/manage_users.png' %>
          </div>
        </div>
      <% end %>

      <!--    <div>-->
      <%#= link_to "Export posts", posts_path(format: :csv), class: "btn btn-primary btn-lg" %>
      <!--    </div>-->

      <!--    <div>-->
      <%#= link_to "Export users", members_path(format: :csv), class: "btn btn-primary btn-lg" %>
      <!--    </div>-->

      <% if current_user.has_role? :admin %>
        <%= link_to report_path do %>
          <div class="d-flex" style="height: 15px; padding-left: 47px; padding-bottom: 30px">
            <div>
              <%= image_tag 'icons/outside.png', style: "height: 25px;" %>
              <%= image_tag 'icons/inside.png', style: "height: 10px; margin-top: 5px; margin-left: -15px" %>
            </div>
            <div>
              <%= image_tag 'photos/report.png', style: "padding-top: 5px; height: 22px; margin-left: 20px" %>
            </div>
          </div>
        <% end %>
      <% end %>

      <div style="margin: 30px; padding: 20px">
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
          <div class="d-flex" , style="height: 15px;">
            <%= image_tag 'icons/logout.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/Logout.png' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-10">
    <div class="container">
      <div class="d-flex">
        <p style="font-size: 25px; font-weight: bold; color: #9FA0A3;">User Management</p>
        <div class="d-flex" , style="padding-left: 700px">
          <%= image_tag "photos/admin.jpg", style: "border-radius: 300px; height: 50px" %>
          <div>
            <span style="font-size: 20px; margin-left: 15px"><%= current_user.name %></span>
            <p style="margin-left: 20px"><%= current_user.roles.pluck(:name).join(",").capitalize %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="container" style="background-color: #F5F6F8; padding: 30px; border-radius: 20px; margin-bottom: 20px">


      <div class="d-flex">
        <strong style="font-size: 25px">List of Users</strong>

        <div style="margin-left: 600px; border-radius: 20px; background: white; padding: 10px 10px 5px 10px; ">
          <%= link_to upload_users_path do %>
            <%= image_tag 'photos/upload.png' %><span style="margin-left: 15px">Upload users</span>
          <% end %>
        </div>

        <div style="margin-left: 30px">
          <%= link_to new_member_path do %>
            <%= button_tag class: 'btn btn-primary', style: "border-radius: 20px; padding: 5px 15px; " do %>
              <%= image_tag 'icons/create.png' %><span style="font-size: 20px; margin-left: 15px">Create Users</span>
            <% end %>
          <% end %>
        </div>
      </div>


      <div class="row" , style="overflow: scroll">
        <% @users.each do |user| %>
          <% if !(user.has_role? :admin) %>
            <div class="d-flex" , style="background-color: #FFFFFF; padding: 10px; margin: 20px 0px; border-radius: 10px">
              <div class="col-2">
                <div>
                  <%= image_tag "icons/Vector.png", style: "background-color: #F5F6F8; padding: 5px; border-radius: 30px" %>
                </div>
              </div>
              <strong class="col-2"  style="font-size: 20px; color: #9FA0A3;  padding-top: 5px;">
                <%= user.name %>
              </strong>

              <strong class="col-2" , style="padding-top: 10px; color: #9FA0A3;">
                <%= user.number %>
              </strong>

              <strong class="col-2" , style="padding-top: 10px; color: #9FA0A3;">
                <%= user.email %>
              </strong>

              <div class="col-2" style="padding-left: 80px; padding-top: 10px;">
                <% if ban_status(user) == "Activate" %>
                  <%= link_to ban_status(user), ban_member_path(user), method: :patch, style: "text-decoration: none; background: rgba(113, 190, 52, 0.15); padding: 10px 40px; border-radius: 20px; color: #71BE34; font-weight: 600;" %>
                <% else %>
                  <%= link_to ban_status(user), ban_member_path(user), method: :patch, style: "text-decoration: none; background: rgba(245, 100, 100, 0.15); padding: 10px 40px; border-radius: 20px; color: #F56464; font-weight: 600;" %>
                <% end %>
              </div>
              <div class="col-2" , style="padding-top: 5px; padding-left: 150px;">
                <%= image_tag "photos/dots.png", style: "height: 30px" %>
              </div>
            </div>
          <% end %>

        <% end %>
      </div>
    </div>
  </div>
</div>

