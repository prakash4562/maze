<div class="row mt-3" style="width: 100vw">
  <div class="col-2">
    <div class="d-flex" , style="margin-left: 20px">
      <%= image_tag "icons/Vector.png", style: "height: 34.3px; width: 32px; margin-right: 10px;" %>
      <h3>Maze</h3>
    </div>

    <div style="padding-top: 40px">
      <div style="margin: 30px auto 20px; margin-left: 30px">
        <%= link_to posts_path do %>
          <div class="d-flex " style="height: 15px; padding-left: 20px;">
            <%= image_tag 'icons/feed.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/feed.png' %>
          </div>
        <% end %>
      </div>

      <div style="margin: 30px; padding: 20px">
        <%= link_to edit_user_registration_path do %>
          <div class="d-flex " , style="height: 15px;">
            <%= image_tag 'icons/profile.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/Profile.png' %>
          </div>
        <% end %>
      </div>

      <%= link_to members_path do %>
        <div style="margin: 30px; padding: 20px">
          <div class="d-flex" , style="height: 17px;">
            <%= image_tag 'icons/manage_users.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/manage_users.png' %>
          </div>
        </div>
      <% end %>

      <!--    <div>-->
      <%#= link_to "Export posts", posts_path(format: :csv), class: "btn btn-primary btn-lg" %>
      <!--    </div>-->

      <!--    <div>-->
      <%#= link_to "Export users", members_path(format: :csv), class: "btn btn-primary btn-lg" %>
      <!--    </div>-->

      <% if current_user.has_role? :admin %>
        <%= link_to report_path do %>
          <div class="d-flex" style="height: 15px; padding-left: 47px; padding-bottom: 30px">
            <div>
              <%= image_tag 'icons/outside.png', style: "height: 25px;" %>
              <%= image_tag 'icons/inside.png', style: "height: 10px; margin-top: 5px; margin-left: -15px" %>
            </div>
            <div>
              <%= image_tag 'photos/report.png', style: "padding-top: 5px; height: 22px; margin-left: 20px" %>
            </div>
          </div>
        <% end %>
      <% end %>

      <div style="margin: 30px; padding: 20px">
        <%= link_to destroy_user_session_path, data: { turbo_method: :delete } do %>
          <div class="d-flex" , style="height: 15px;">
            <%= image_tag 'icons/logout.png', style: "padding-right: 20px;" %>
            <%= image_tag 'photos/Logout.png' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="col-10">
    <div class="container">
      <div class="d-flex">
        <div class="d-flex" , style="border: 1px solid rgba(51, 51, 51, 0.3); height: 50px; padding: 10px; border-radius: 10px; width: 900px" ,>
          <div>
            <%= image_tag 'icons/search.png', style: "margin-right: 20px " %>
          </div>
          <div>Search something for here...</div>
        </div>
        <div class="d-flex" , style="padding-left: 100px">
          <%= image_tag "photos/admin.jpg", style: "border-radius: 300px; height: 50px" %>
          <div>
            <span style="font-size: 20px; margin-left: 15px"><%= current_user.name %></span>
            <p style="margin-left: 20px"><%= current_user.roles.pluck(:name).join(",").capitalize %></p>
          </div>
        </div>
      </div>
    </div>
    <div class="container" style="background-color: #F5F6F8; padding: 30px; border-radius: 20px; margin-bottom: 20px">

      <%= form_tag import_members_path, multipart: true do %>

        <%= submit_tag "Import" %>

        <div style="border: 2px solid grey; height: 400px; width: 800px; background-color: white; border-radius: 10px; margin-top: 60px; margin-left: 170px; margin-bottom: 30px">
          <h4 style="margin-top: 20px; margin-left: 20px;">Upload file</h4>
          <div style="margin-left: 170px; margin-top: 120px;">
            <%= file_field_tag :file, style: "width: 420px; height: 100px; opacity: 0;" %>
            <div style="margin-top: -100px">
              <%= image_tag 'photos/upload_bc.png' %>
              <%= image_tag 'photos/upload1.png', style: "margin-left: -425px;" %>
              <%= image_tag 'photos/upload2.png', style: "margin-left: -75px; margin-top: 25px;" %>
              <%= image_tag 'photos/uploadtext.png', style: "margin-left: 100px;" %>
            </div>
          </div>
        </div>
      <% end %>

    </div>
  </div>
</div>