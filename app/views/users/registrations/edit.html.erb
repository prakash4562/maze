<div class="body">
  <div class="d-flex" , style="padding-left: 40px; padding-top: 20px">
    <div style="background-color: white; padding: 8px; border-radius: 10px;"><%= image_tag("icons/Vector.png") %></div>
    <div><h2 style="font-family: 'Inria Sans', sans-serif; color: white; font-weight: bold; margin-left: 15px">Maze</h2>
    </div>
  </div>

  <div style="margin: 5px">
    <%= image_tag("photos/line.png") %>
  </div>

  <div class="create">

    <h2 class="d-flex justify-content-center" , style="color: white">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <div class="d-flex justify-content-center" , style="color: white">
      <%= render "users/shared/error_messages", resource: resource %>
      </div>

      <div class="row">
        <div class="col-6">

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :email, style: "color: white;" %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "padding: 5px; border-radius: 15px" %>
      </div>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :first_name, style: "color: white;" %><br/>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "padding: 5px; border-radius: 15px" %>
      </div>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :last_name, style: "color: white;" %><br/>
        <%= f.text_field :lname, autofocus: true, autocomplete: "lname", style: "padding: 5px; border-radius: 15px" %>
      </div>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :mobile_number, style: "color: white;" %><br/>
        <%= f.text_field :number, autofocus: true, autocomplete: "number", style: "padding: 5px; border-radius: 15px" %>
      </div>
        </div>

<div class="col-6">
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :password, style: "color: white;" %> <i>(leave blank if you don't want to change it)</i><br/>
        <%= f.password_field :password, autocomplete: "new-password", style: "padding: 5px; border-radius: 15px" %>
        <% if @minimum_password_length %>
          <br/>
          <em><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :password_confirmation, style: "color: white;" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "padding: 5px; border-radius: 15px" %>
      </div>

      <div class="field", style="margin: 20px 20px;">
        <%= f.label :current_password, style: "color: white;" %><br/>
        <%= f.password_field :current_password, autocomplete: "current-password", style: "padding: 5px; border-radius: 15px" %>
      </div>
      </div>
      </div>

      <div class="actions d-flex justify-content-center">
        <%= f.submit "Update", style: "padding: 5px 15px; border-radius: 10px " %>
      </div>
    <% end %>

    <h3 style="color: #FFFFFF;">Cancel my account</h3>

     <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, style: "padding: 5px 15px; border-radius: 10px;  margin: 10px 15px; " %>

  </div>
  <%= link_to "Back", :back, class: "btn btn-primary", style: "margin-left: 700px" %>

</div>